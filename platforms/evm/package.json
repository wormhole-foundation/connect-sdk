{
  "name": "@wormhole-foundation/connect-sdk-evm",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wormhole-foundation/connect-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/wormhole-foundation/connect-sdk/issues"
  },
  "homepage": "https://github.com/wormhole-foundation/connect-sdk#readme",
  "directories": {
    "test": "tests"
  },
  "license": "Apache-2.0",
  "version": "0.1.0-beta.1",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "author": "",
  "description": "SDK for EVM chains, used in conjunction with @wormhole-foundation/connect-sdk",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "keywords": [
    "wormhole",
    "sdk",
    "typescript",
    "connect",
    "ethereum",
    "moonbeam",
    "celo",
    "polygon",
    "fantom",
    "avalanche",
    "bsc",
    "evm"
  ],
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "build:cjs":"tsc -p ./tsconfig.cjs.json",
    "build:esm":"tsc -p ./tsconfig.esm.json",
    "build":"npm run build:cjs && npm run build:esm",
    "rebuild":"npm run clean && npm run build:cjs && npm run build:esm",
    "clean": "rm -rf ./dist && rm -f ./*.tsbuildinfo",
    "lint": "npm run prettier && eslint --fix",
    "prettier": "prettier --write ./src",
    "test":"jest --config ./jest.config.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "lint-staged": "^13.1.2",
    "prettier": "2.8.4",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@wormhole-foundation/sdk-base": "*",
    "@wormhole-foundation/sdk-definitions": "*",
    "@wormhole-foundation/connect-sdk": "*",
    "typechain":"^8.2.0"
  },
  "peerDependencies": {
    "ethers": "^6.5.1",
    "@typechain/ethers-v6": "^0.4.0"
  }
}
